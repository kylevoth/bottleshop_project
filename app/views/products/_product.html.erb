<div class="col-md-4">
  <div class="well" >
      <h4>
        <%= product.name %></h4>
      </h4>
      <p>
        <strong>Description:</strong>
         <%= product.description %>
      </p>
      <p>
      <strong>Price:</strong> <%= number_to_currency product.price %>
    </p>
    <p>
      <strong>Type:</strong> <%= product.type.name %>
    </p>
      <p>
      <%= image_tag product.image, :size => "200x300" %>
    </p>

    <p><%= link_to 'View', product_path(product) %></p>
  </div>
</div>
